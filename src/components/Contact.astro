---
import GitHub from "../icons/GitHub.astro";
import Instagram from "../icons/Instagram.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import Mail from "../icons/Mail.astro";

const SOCIALMEDIAL = [
  {
    href: "https://github.com/Quiquia",
    icon: GitHub,
  },
  {
    href: "https://www.instagram.com/vane_quive/",
    icon: Instagram,
  },
  {
    href: "https://www.linkedin.com/in/vanessaquiquia/",
    icon: LinkedIn,
  },
  {
    href: "mailto:vanebequi1994@gmail.com",
    icon: Mail,
  },
];
---

<div class="">
  <ul class="flex gap-x-3">
    {
      SOCIALMEDIAL.map(({ href, icon: Icon }) => (
        <li class="">
          <a
            href={href}
            target="_blank"
            rel="noopener noreferrer"
            class="rounded-full  border-white/10 flex justify-center items-center p-4  bg-white/5
            hover:scale-110 hover:bg-white/10
            transition
            cursor-pointer"
          >
            <Icon class="size-7"/>
          </a>
        </li>
      ))
    }
  </ul>
</div>
